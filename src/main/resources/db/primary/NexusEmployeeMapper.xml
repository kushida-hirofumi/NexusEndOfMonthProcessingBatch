<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexus.NexusEndOfMonthProcessingBatch.domain.primary.mapper.NexusEmployeeMapper">

    <resultMap id="NexusEmployeeResultMap" type="com.nexus.NexusEndOfMonthProcessingBatch.domain.primary.entity.NexusEmployeeEntity">
        <result column="employee_id" property="employeeId"/>
        <result column="affiliated_company_id" property="affiliatedCompanyId"/>
        <result column="family_name" property="familyName"/>
        <result column="first_name" property="firstName"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="pc_mail_address" property="pcMailAddress"/>
        <result column="mobile_phone_number" property="mobilePhoneNumber"/>
        <result column="mobile_mail_address" property="mobileMailAddress"/>
        <result column="department_id" property="departmentId"/>
        <result column="position_id" property="positionId"/>
        <result column="entering_status_id" property="enteringStatusId"/>
        <result column="entering_date" property="enteringDate" typeHandler="com.nexus.NexusEndOfMonthProcessingBatch.domain.type_handler.LocalDateTypeHandler"/>
        <result column="postal_code" property="postalCode"/>
        <result column="prefectures" property="prefectures"/>
        <result column="municipality" property="municipality"/>
        <result column="address" property="address"/>
        <result column="building_name" property="buildingName"/>
        <result column="postal_code1" property="postalCode1"/>
        <result column="prefectures1" property="prefectures1"/>
        <result column="municipality1" property="municipality1"/>
        <result column="address1" property="address1"/>
        <result column="building_name1" property="buildingName1"/>
        <result column="postal_code2" property="postalCode2"/>
        <result column="prefectures2" property="prefectures2"/>
        <result column="municipality2" property="municipality2"/>
        <result column="address2" property="address2"/>
        <result column="building_name2" property="buildingName2"/>
        <result column="number_of_dependents" property="numberOfDependents"/>
        <result column="living_at_home_id" property="livingAtHomeId"/>
        <result column="country_of_citizenship_id" property="countryOfCitizenshipId"/>
        <result column="health_insurance_card_code_number" property="healthInsuranceCardCodeNumber"/>
        <result column="general_affairs_memo" property="generalAffairsMemo"/>
        <result column="retirement_date" property="retirementDate" typeHandler="com.nexus.NexusEndOfMonthProcessingBatch.domain.type_handler.LocalDateTypeHandler"/>
        <result column="reason_for_retirement_id" property="reasonForRetirementId"/>
        <result column="details_of_retirement_reason" property="detailsOfRetirementReason"/>
        <result column="delete_flg" property="deleteFlg"/>
        <result column="registered_user_id" property="registeredUserId"/>
        <result column="registered_date" property="registeredDate" typeHandler="com.nexus.NexusEndOfMonthProcessingBatch.domain.type_handler.LocalDateTimeTypeHandler"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="update_date" property="updateDate" typeHandler="com.nexus.NexusEndOfMonthProcessingBatch.domain.type_handler.LocalDateTimeTypeHandler"/>
    </resultMap>

    <select id="findById" parameterType="hashmap" resultMap="NexusEmployeeResultMap">
        SELECT * FROM nexus_employee WHERE
            delete_flg = false
            AND employee_id = ${id}
    </select>

</mapper>