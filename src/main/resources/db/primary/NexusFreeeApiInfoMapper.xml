<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexus.NexusEndOfMonthProcessingBatch.domain.primary.mapper.NexusFreeeApiInfoMapper">

    <resultMap id="NexusFreeeApiInfoResultMap" type="com.nexus.NexusEndOfMonthProcessingBatch.domain.primary.entity.NexusFreeeApiInfoEntity">
        <result column="client_id" property="clientId"/>
        <result column="client_secret" property="clientSecret"/>
        <result column="redirect_url" property="redirectUrl"/>
        <result column="company_id" property="companyId"/>
        <result column="company_name" property="companyName"/>
        <result column="access_token" property="accessToken"/>
        <result column="refresh_token" property="refreshToken"/>
        <result column="delete_flg" property="deleteFlg"/>
        <result column="registered_user_id" property="registeredUserId"/>
        <result column="registered_date" property="registeredDate" typeHandler="com.nexus.NexusEndOfMonthProcessingBatch.domain.type_handler.LocalDateTimeTypeHandler"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="update_date" property="updateDate" typeHandler="com.nexus.NexusEndOfMonthProcessingBatch.domain.type_handler.LocalDateTimeTypeHandler"/>
    </resultMap>

    <update id="updateAccessToken" parameterType="hashmap">
        UPDATE nexus_freee_api_info SET
        access_token = #{accessToken},
        refresh_token = #{refreshToken},
        update_user_id = #{updateUserId},
        update_date = now()
        <where>
            delete_flg = false AND client_id = #{clientId} AND client_secret = #{clientSecret} AND company_id = ${companyId} AND company_name = #{companyName}
        </where>
    </update>

    <update id="delete" parameterType="hashmap">
        UPDATE nexus_freee_api_info SET
        delete_flg = true,
        update_user_id = #{updateUserId},
        update_date = now()
        <where>
            delete_flg = false AND client_id = #{clientId} AND client_secret = #{clientSecret} AND company_id = ${companyId} AND company_name = #{companyName}
        </where>
    </update>

    <select id="exists" resultType="Boolean">
        SELECT IF(COUNT(*) > 0, true, false) FROM nexus_freee_api_info
        <where>
            delete_flg = false
        </where>
    </select>

    <select id="findAll" resultMap="NexusFreeeApiInfoResultMap">
        SELECT * FROM nexus_freee_api_info
        <where>
            delete_flg = false
        </where>
    </select>

    <select id="findByCompanyName" parameterType="hashmap" resultMap="NexusFreeeApiInfoResultMap">
        SELECT * FROM nexus_freee_api_info
        <where>
            delete_flg = false
            AND company_name = #{companyName}
        </where>
    </select>

</mapper>